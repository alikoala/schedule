<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    

    <!-- Application theme. -->
    <style name="ThemeGoogle" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarGoogle</item>
    </style>
    
    <style name="ThemeVinous" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarVinous</item>
    </style>
<!--     Color1, Color2 ==== #380605, #330100 -->
<!-- Goolge C1, C2 === #4A8BF4, #3475DE -->

    <color name="ColorGoogle1">#4A8BF4</color>
    <color name="ColorGoogle2">#3475DE</color>
    <color name="ColorGoogleText">#000000</color>
    
    <color name="ColorVinous1">#380605</color>
    <color name="ColorVinous2">#330100</color>
    <color name="ColorVinousText">#FFFFFF</color>
    
    <style name="ActionBarGoogle"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ColorGoogle1</item>
    </style>
    
    <style name="ButtonStyleGoogle">
        <item name="android:background">@drawable/buttonstylegoogle</item>
    	<item name="android:textColor">@color/ColorGoogleText</item>
    </style>
    
    <style name="ActionBarVinous"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ColorVinous1</item>
    </style>
    
    <style name="ButtonStyleVinous">
        <item name="android:background">@drawable/buttonstylevinous</item>
    	<item name="android:textColor">@color/ColorVinousText</item>
    </style>
</resources>

